	doi = {10.1007/s11356-021-18315-3},
	journal = {ENVIRONMENTAL SCIENCE AND POLLUTION RESEARCH},
	month = {2022-02-26},
	number = {22},
	pa = {TIERGARTENSTRASSE 17, D-69121 HEIDELBERG, GERMANY},
	pages = {33075--33094},
