	date = {2022 MAR},
	date-added = {2024-04-11 17:06:33 +0800},
	date-modified = {2024-04-11 17:06:33 +0800},
	doi = {10.1016/j.spc.2022.01.011},
	journal = {SUSTAINABLE PRODUCTION AND CONSUMPTION},
	month = {2022-05-24},
	pa = {RADARWEG 29, 1043 NX AMSTERDAM, NETHERLANDS},
	pages = {851--869},
	pi = {AMSTERDAM},
	pu = {ELSEVIER},
	title = {Does protectionism improve environment of developing countries? A perspective of environmental efficiency assessment},
