	doi = {10.1016/j.jclepro.2021.130186},
	journal = {JOURNAL OF CLEANER PRODUCTION},
	month = {2022-06-22},
	pa = {THE BOULEVARD, LANGFORD LANE, KIDLINGTON, OXFORD OX5 1GB, OXON, ENGLAND},
